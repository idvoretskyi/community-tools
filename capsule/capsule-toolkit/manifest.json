{
    "manifest_version": 2,
    "name": "Capsule + RethinkDB Toolkit",
    "description": "Tools for improving Capsule's workflow.",
    "version": "0.1",

    "icons": {
        "128": "icon.png"
    },

    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },

    "permissions": [
        "https://rethinkdb.capsulecrm.com/*",
        "https://api.github.com/*",
        "tabs",
        "storage"
    ],
    "page_action": {
        "default_title": "Capsule + RethinkDB toolkit",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}
